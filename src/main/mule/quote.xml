<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="get-quote-Sub-Flow" doc:id="478a34bf-e1fb-453c-91c0-fafbd0128d5e" >
		<logger level="INFO" doc:name="request recived" doc:id="3675181a-a1d8-4d5e-9600-81525b94e774" message="request recived to get quotes"/>
		<ee:transform doc:name="set variables" doc:id="3fd874e9-b2fe-49dd-81f1-62e8b6cbd018" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="destination" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.destination
]]></ee:set-variable>
				<ee:set-variable variableName="tripStartDate" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.tripStartDate
]]></ee:set-variable>
				<ee:set-variable variableName="tripEndDate" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.tripEndDate
]]></ee:set-variable>
				<ee:set-variable variableName="age" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.age
]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="read insurance plans" doc:id="6451bc2a-c434-4efe-8f20-e796b0c8c625" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
readUrl("classpath://Travel_Insurance_Plans.json", "application/json")]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<ee:transform doc:name="responses" doc:id="17b4ef67-f157-4188-86b4-8a261ee16dbd" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload map ((item, index) -> 
{
    plan:item.plan,
    coverage:item.coverage,
    premium:(((item.bracket filter ($.minAge<vars.age and vars.age <$.maxAge))[0].premiumPerday)
*(daysBetween((vars.tripStartDate as Date),(vars.tripEndDate as Date)) + 1))

})
]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="request completed" doc:id="e5c3448f-3019-42f1-80fd-5e01c178ea28" message="request completed successefully to get quotes"/>
	</sub-flow>
</mule>
